@model Items
@{
    ViewData["Title"] = "Preces";
}
<form method="post">
  <fieldset>
@*      <div asp-validation-summary="All" class="text-danger"></div>*@
    <div class="form-group">
      <label asp-for="Name" class="form-label mt-4">Nosaukums</label>
      <input asp-for="Name"  class="form-control">
      <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label asp-for="Description" class="form-label mt-4">Apraksts</label>
      <input asp-for="Description"  class="form-control">
      <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WarehouseId" class="form-label mt-4">Noliktava</label>
        <select asp-for="WarehouseId" class="form-select" asp-items="ViewBag.Warehouses"></select>
    </div>
    <div class="form-group">
      <label asp-for="Count" class="form-label mt-4">Skaits</label>
      <input asp-for="Count"  class="form-control">
      <span asp-validation-for="Count" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label asp-for="Price" class="form-label mt-4">Adrese</label>
      <input asp-for="Price"  class="form-control" placeholder="12.34">
      <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-controller="Warehouses" asp-action="Index" class="btn btn-light">Atpakaļ uz sarakstu</a>
    </div>
  </fieldset>
</form>