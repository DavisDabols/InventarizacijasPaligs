@model Worker
@{
    ViewData["Title"] = "Darbinieki";
}
<form method="post">
  <fieldset>
@*      <div asp-validation-summary="All" class="text-danger"></div>*@
    <input asp-for="Id" hidden />
    <div class="form-group">
      <label asp-for="Name" class="form-label mt-4">Vārds</label>
      <input asp-for="Name" disabled  class="form-control" placeholder="Jānis">
    </div>
    <div class="form-group">
      <label asp-for="Surname" class="form-label mt-4">Uzvārds</label>
      <input asp-for="Surname" disabled class="form-control" placeholder="Bērziņš">
    </div>
    <div class="form-group">
      <label asp-for="Email" class="form-label mt-4">E-Pasts</label>
      <input asp-for="Email" disabled class="form-control">
    </div>
    <div class="form-group">
      <label asp-for="Password" class="form-label mt-4">Parole</label>
      <input asp-for="Password" disabled class="form-control">
    </div>
    <div class="mt-4">
        <a asp-controller="Warehouses" asp-action="Index" class="btn btn-primary">Atpakaļ uz sarakstu</a>
        <button type="submit" class="btn btn-danger">Izdzēst</button>
    </div>
  </fieldset>
</form>