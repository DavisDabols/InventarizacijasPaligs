@model IEnumerable<Worker>
@{
    ViewData["Title"] = "Noliktavas";
}

<h1>Darbinieki</h1>
<a asp-controller="Workers" asp-action="Create" class="btn btn-primary">
    <i class="bi bi-plus-lg"></i> Jauns Darbinieks
</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Vārds</th>
            <th scope="col">Uzvārds</th>
            <th scope="col">E-Pasts</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="35%">@obj.Name</td>
                <td width="35%">@obj.Surname</td>
                <td width="10%">@obj.Email</td>
                <td width="20%">
                    <div class="btn-group" style="float:right">
                        <a asp-controller="Workers" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning" style="float:none">Rediģēt</a>
                        <a asp-controller="Workers" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger" style="float:none">Dzēst</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>