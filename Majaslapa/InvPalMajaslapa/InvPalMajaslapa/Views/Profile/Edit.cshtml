@model EditUserViewModel

@{
    ViewBag.Title = "Lietotāja Rediģēšana";
}

<h1>Lietotāja Rediģēšana</h1>

<form method="post">
  <fieldset>
    <div class="form-group">
      <label asp-for="Name" class="form-label mt-4">Vārds</label>
      <input asp-for="Name"  class="form-control" placeholder="@Model.Name">
    </div>
    <div class="form-group">
      <label asp-for="Surname" class="form-label mt-4">Uzvārds</label>
      <input asp-for="Surname"  class="form-control" placeholder="@Model.Surname">
    </div>
    <div class="form-group">
      <label asp-for="CompanyName" class="form-label mt-4">Kompānijas Nosaukums</label>
      <input asp-for="CompanyName"  class="form-control" placeholder="@Model.CompanyName">
    </div>
    <div class="form-group">
      <label asp-for="Email" class="form-label mt-4">Epasta adrese</label>
      <input asp-for="Email"  class="form-control" placeholder="@Model.Email">
      <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label asp-for="OldPassword" class="form-label mt-4">Vecā parole</label>
      <input asp-for="OldPassword" class="form-control" placeholder="Vecā parole">
      <span asp-validation-for="OldPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label asp-for="Password" class="form-label mt-4">Parole</label>
      <input asp-for="Password" class="form-control" placeholder="Parole">
      <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label asp-for="ConfirmPassword" class="form-label mt-4">Apstiprināt paroli</label>
      <input asp-for="ConfirmPassword" class="form-control" placeholder="Parole">
      <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Rediģēt</button>
    </div>
  </fieldset>
</form>
